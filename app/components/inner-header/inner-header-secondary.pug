include ../../blocks/logo/logo
include ../../blocks/icon/icons
include ../../blocks/nav/nav
include ../../blocks/lang-toggle/lang-toggle

mixin inner-header-secondary()
  +b.HEADER.inner-header_secondary&attributes(attributes).header
    .container
      +e.logo
        a(href='#')
          +icon('logo-white')
      +e.burger
        +icon('header-burger')
      +nav(['Project', 'Whitepaper', 'Roadmap', 'Team'])
    +e.pushed-nav
      ul.nav.hidden-sm.hidden-xs
        li
          a(href='#').nav-link.nav-link-border-success Sign up now
      +lang-toggle
