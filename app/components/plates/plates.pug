        +timeline-item.__item.sr-animate
          if edit
            +timeline-item-header-edit('education', '17/02/2016 — 17/06/2016')._lightgreen
          else
            +timeline-item-header('education', '17/02/2016 — 17/06/2016')._lightgreen
          h4 Univercity Of Creative art Rocherster Great Britain
