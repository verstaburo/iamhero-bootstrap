mixin language-heading
  +e.lang-row.hidden-xs.hidden-sm
    +e.lang-col
      h5 Language
    +e.lang-col
      h5 Reading
    +e.lang-col
      h5 Speaking
    +e.lang-col
      h5 Writing
    +e.lang-col
      h5 Understanding

mixin language-sliders(title, color)
  -
    var langSkills = ['Reading', 'Speaking', 'Writing', 'Understanding']
  +e.lang-row
    +e.lang-col
      h4.font-weight-medium= title
    each item in langSkills
      +e.lang-col
        h4.visible-xs.visible-sm= item
        +rangeslider-nolabel(color)

mixin language-sliders-static(title, color)
  -
    var langSkills = ['Reading', 'Speaking', 'Writing', 'Understanding']
  +e.lang-row
    +e.lang-col
      h4.font-weight-medium= title
    each item in langSkills
      +e.lang-col
        h4.visible-xs.visible-sm= item
        +rangeslider-nolabel-static(color)

