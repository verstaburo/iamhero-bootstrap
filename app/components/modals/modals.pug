include ../../blocks/input/input
include ../../blocks/textarea/textarea
include ../../blocks/button-icon/button-icon
include ../../blocks/radio/radio
include ../../blocks/label/label
include ../../blocks/icon-close/icon-close
include ../../blocks/plate/plate
include ../../blocks/upload-area/upload-area
include ../../blocks/select/select
include ../../blocks/bg-image/bg-image
include ../../blocks/upload/upload


mixin modal
  .modal.fade&attributes(attributes)
    .container
      .row
        .col-xxl-16.col-lg-offset-5.col-lg-19.col-xs-24.modal-area
          +plate._modal._relative
            block

mixin modal-close
  +icon-close(data-dismiss="modal").modal-close


mixin video-modal
  +modal#videoModal
    +e.H2.header Upload video represent
    +modal-close
    form.form-inline.plate__top-50
      .form-group
        +input('Write URL')
        span.help-block validation
      span.form-inline-text or
      +button-icon.btn-grey
        +button-icon-item('cloud')._grey._big
        +button-icon-text Upload
      +button-icon.btn-default.form-inline-btn
        +button-icon-item('plus')._grey._big._stroke_white
        +button-icon-text Add video

mixin case-modal
  +modal#caseModal
    +e.H2.header New case
      +label.label-thin.label-medium.label-bg-grey.label-font-standart.label-rounded Graphic
    +modal-close
    +b.FORM.modal-form.plate__top-30
      +e.wrap
        +e.inputs
          .form-group.has-error
            +input('Header')
            span.help-block error
          .form-group.plate__top-30.has-success
            +textarea(3)(placeholder='Short description').form-control-area-static.form-control-border-straight
            span.help-block success
          +e.tags.plate__top-30
            +e.SPAN.text Tags:
            +label-case-tag-close Design
            +label-case-tag-close Illustration
            +label-case-tag-close Art-directing
          .form-inline.plate__top-20
            .form-group
              +select([{value: '1', text: '1'}, {value: '2', text: '2'}, {value: '3', text: '3'}], 'Select')
            .form-inline-text or
            .form-group
              +input('write another')
            +button-icon.btn-grey.form-inline-btn
              +button-icon-item('plus')._big._stroke_grey
              +button-icon-text Add tag
        +e.upload._big
          +upload-area-image
      .summary-btn.plate__top-50
        +button-add Add case

mixin resume-modal
  +modal#resumeModal
    +e.H2.header New timeline point
    +modal-close
    +b.FORM.modal-form.plate__top-30
      +e.SPAN.text Select category:
      +radio-inline(true, 'test') Education
      +radio-inline('', 'test') Awards and certificates
      +radio-inline('', 'test') Work
      +e.wrap.plate__top-30
        +e.inputs
          +e.datepick
            span From
            +select-date
            span to
            +select-date
          .form-group.plate__top-40.has-warning
            +input('Header')
            span.help-block warning
          .form-group.plate__top-40.has-error
            +textarea(4)(placeholder='Description').form-control-area-static
            span.help-block error
        +e.upload
          +upload
            +upload-area.active Drug and drop files (max 100 mb)
      .summary-btn.plate__top-40
        +button-add Add point

mixin case-open-modal
  +modal#openCase
    +modal-close
    +e.H2.header Winter In Squares
      +label.label-thin.label-medium.label-bg-grey.label-font-standart.label-rounded Pre-production
      +label.label-thin.label-medium.label-bg-grey.label-font-standart.label-rounded Retouching
    +e.P.modal-text A winter trip through rural Central Europe. Snow, frost and ice have transformed the landscape, everything appears like an ink drawing. The colors are fading, contrasts between dark and light dominate the visual occurance. A concatenation of quiet and vast scenes, a trip with many stopovers, discovering the new and the known. Nature seems to stagnate during winter, an allthrough romantic view. Meanwhile the world is changing, but nature romanticism is nowadays again our hidden shelter where the mind escapes from the upheavals of the reality. Locations: Germany, from the coast to the Alps.
    +bg-image('profile-edit/cases/big-1.jpg').__case-big-img
    +bg-image('profile-edit/cases/big-2.jpg').__case-big-img
