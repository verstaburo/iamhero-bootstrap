extends ../../layouts/entry
include ../../blocks/switch/switch
include ../../blocks/entry-form/entry-form
include ../../blocks/input/input
include ../../blocks/button/button
include ../../blocks/social-secondary/social-secondary

block head
  - var pageTitle = 'I am hero - Sign UP'

block entry-form
  +entry-form.__form
    +entry-form-header
      +entry-form-title Sign
        +e.SPAN.text-success Up
      +switch('Job seeker', 'Employer')._big
    .form-group.has-success
      +input('Full name').form-control-secondary.form-control-secondary-white
      span.help-block Success!
    .form-inline
      .form-group
        +input('E-mail Adress').form-control-secondary.form-control-secondary-white
        span.help-block
      .form-group.form-group-offset
        +input('Password').form-control-secondary.form-control-secondary-white
        span.help-block
    +entry-form-text._small
      | By signing up you agree to the
      a(href='#')
        b Terms of Conditions
      | and the
      a(href='#')
        b Privacy Policy
    +button.btn-secondary.btn-secondary-font-big.btn-block.__button Sign up
    +entry-form-text Already have an Account?
      +e.A(href='#').text-success Login
    +e.social-text.entry-page__center-container
      +entry-form-text.text-center or Sign up with
    +e.social.entry-page__center-container
      +social-secondary
