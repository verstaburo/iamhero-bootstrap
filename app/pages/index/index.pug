extends ../../layouts/default
include ../../components/modals/modals

block head
  - var pageTitle = 'I Am Hero - Demo page'

mixin demo-link(title, path)
  +e.link&attributes(attributes)
    a(href=path+'.html', target='_blank').h3= title
    span= '('+path+'.html)'

mixin demo-popup(title, target)
  +e.link&attributes(attributes)
    a(href='#', target='_blank', data-toggle="modal", data-target='#'+target).h3= title

block content
  +b.demo
    +demo-link('Profile3x2', 'profile')
