    +demo-link('Single job', 'single-job')
    +demo-link('Stats', 'stats')
    +demo-link('Suggested jobs + vacancies', 'suggested-jobs')
    +demo-link('Sign UP', 'signup')
    +demo-link('Login', 'login')
    +demo-link('ICO Landing', 'ico-landing')
    +demo-link('Affiliate Landing', 'affiliate-landing')
