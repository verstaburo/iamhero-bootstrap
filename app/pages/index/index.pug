    +demo-link('Dashboard', 'dashboard')
    +demo-link('Finances', 'finances')
    +demo-link('Hero search', 'hero-search')
    +demo-link('Invite friends', 'invite-friends')
    +demo-link('Job listing', 'job-listing')
    +demo-link('Messages', 'messages')
    +demo-link('Notification options', 'notification-options')
    +demo-link('Settings Account settings', 'account-settings')
    +demo-link('Settings Heroes to suggest', 'heroes-to-suggest')
