extends ../../layouts/inner-page
include ../../blocks/page/page
include ../../components/aside-filter/aside-filter
include ../../components/search-form/search-form
include ../../blocks/inner-plate/inner-plate
include ../../blocks/inner-card/inner-card
include ../../blocks/checkbox/checkbox
include ../../components/side-modals/side-modals

block head
  - var pageTitle = 'I Am Hero - Shortlist'

block aside-filter
  +aside-filter._top-none
    +aside-filter-item._no-side
      +aside-filter-heading('menu-shortlists') SHORTLISTS
      - for(var i=0;i<2;i++)
        +aside-filter-shortlist-item('45')._bordered Designer 2200
        +aside-filter-shortlist-item('12')._bordered Main office manager
        +aside-filter-shortlist-item('4')._bordered Search 31
        +aside-filter-shortlist-item('1')._bordered Rage
        +aside-filter-shortlist-item('22')._bordered Project management

block content
  +page._inner-medium.shortlist
    +e.overlay.shortlist__overlay
      p Choose heroest you want to add to mass message
      +checkbox-inline(true)
    +search-form
    +side-modal-messages.shortlist__modal
    +hero-to-shortlist('1.jpg', 'David Allandu')
    +hero-to-shortlist('2.jpg', 'Alan Maier', true)
    +hero-to-shortlist('3.jpg', 'Jamelia Freeman')
    +hero-to-shortlist('4.jpg', 'Katy Moon', true)
    +hero-to-shortlist('5.jpg', 'Adelina Mauer')
    +hero-to-shortlist('6.jpg', 'Laura Benneton')
    +hero-to-shortlist('7.jpg', 'James Malovich')
    +hero-to-shortlist('8.svg', 'Andriano Colleti')
    +hero-to-shortlist('9.jpg', 'Alexandr Benua')
    +hero-to-shortlist('10.jpg', 'Jeremy Clarckson')
