include ../../blocks/icon/icons

mixin news-item(img)
  +b.news-item&attributes(attributes).bg-image
    a(href='#')
    img(src='assets/images/'+img)
    +e.text-container
      h3
        block
      time 27 / 12 / 2016

mixin news-item-big(img)
  +b.news-item._big&attributes(attributes).bg-image
    a(href='#')
    img(src='assets/images/'+img)
    +e.text-container
      block
      .describe__more
        +icon('arrow-down-rounded')
      time 27 / 12 / 2016
