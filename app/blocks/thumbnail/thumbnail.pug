include ../../blocks/icon-close/icon-close
include ../../blocks/icon/icons
include ../../blocks/bg-image/bg-image

mixin thumbnail
  .thumbnail.thumbnail-border-none&attributes(attributes)
    block

mixin thumbnail-content()
  .caption&attributes(attributes)
    block

mixin thumbnail-tags
  .thumbnail-tag-container&attributes(attributes)
    block

mixin thumbnail-img(src)
  +bg-image(src).thumbnail-img&attributes(attributes)
    block

mixin thumbnail-case-link-popup
  a(href='#', data-toggle='modal', data-target='#openCase').thumbnail-link-popup

mixin thumbnail-case-controls()
  .thumbnail-controls&attributes(attributes)
    a(href='#').thumbnail-controls-item
      +icon('pencil', true).icon-edit
    a(href='#').thumbnail-controls-item
      +icon-close.icon-close_white

mixin thumbnail-case-img(src)
  +bg-image(src).thumbnail-case-img&attributes(attributes)

mixin thumbnail-edit
  .thumbnail-edit&attributes(attributes)
    a(href='#')
      +icon('pencil')
    a(href='#')
      +icon-close

mixin thumbnail-interests(src, title)
  +thumbnail.thumbnail-interests&attributes(attributes)
    +thumbnail-img(src)
    +thumbnail-content()
      h4.font-weight-medium= title
      p Website, logo and company identity graphical design. Print, pre-print, digital design

mixin thumbnail-interests-edit(src, title)
  +thumbnail.thumbnail-interests&attributes(attributes)
    +thumbnail-img(src)
    +thumbnail-content()
      h4.font-weight-medium= title
        +thumbnail-edit
      p Website, logo and company identity graphical design. Print, pre-print, digital design
