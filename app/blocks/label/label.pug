include ../icon-close/icon-close

mixin label
  +b.SPAN.label&attributes(attributes)
    block

mixin label-small
  +b.SPAN.label&attributes(attributes)
    block

mixin label-default
  +label.label-default.label-thin.label-larger&attributes(attributes)
    block

mixin label-default-medium
  +label.label-default.label-thin.label-medium&attributes(attributes)
    block

mixin label-close
  +label.label-default.label-thin.label-larger.label-close&attributes(attributes)
    block
    +icon-close

mixin label-case-tag
  +label.label-bg-grey.label-font-light.label-font-black&attributes(attributes)
    block

mixin label-case-tag-close
  +label.label-bg-grey.label-font-light.label-font-black.label-close.label-close-small&attributes(attributes)
    block
    +icon-close
